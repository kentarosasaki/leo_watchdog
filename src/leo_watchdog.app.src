{application, leo_watchdog,
 [
  {description, "leo_watchdog keep monitoring applications"},
  {vsn, "0.4.1"},
  {mod, {leo_watchdog_app, []}},
  {registered, []},
  {applications, [
                  kernel,
                  stdlib
                 ]},
  {env, [
         %% watchdog for cpu
         {wd_cpu_enabled, true},
         {wd_cpu_interval, 5000},
         {wd_threshold_cpu_load_avg, 5.0},
         {wd_threshold_cpu_util, 100},
         {wd_cpu_raised_error_times, 5},
         %% watchdog for disk
         {wd_disk_enabled, true},
         {wd_disk_interval, 5000},
         {wd_threshold_disk_use, 80},
         {wd_threshold_disk_util, 100},
         {wd_threshold_disk_rkb, 262144},
         {wd_threshold_disk_wkb, 262144},
         {wd_disk_raised_error_times, 5}
        ]}
 ]}.
